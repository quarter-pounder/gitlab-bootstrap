# Core settings
HOSTNAME=
DOMAIN=
USERNAME=
EMAIL=
SSH_KEY="ssh-ed25519 AAAA...public_key_here..."
TIMEZONE=Asia/Tokyo
LOCALE=en_US.UTF-8

# Target device (auto-detected if empty)
NVME_DEVICE=/dev/nvme0n1

# Ubuntu image source (auto-selects latest LTS if empty)
UBUNTU_VERSION=24.04.3
UBUNTU_IMG_URL=https://cdimage.ubuntu.com/releases/${UBUNTU_VERSION}/release/ubuntu-${UBUNTU_VERSION}-preinstalled-server-arm64+raspi.img.xz

# GitLab & monitoring
GITLAB_DOMAIN=gitlab.${DOMAIN}
GITLAB_EXTERNAL_URL=https://${GITLAB_DOMAIN}
GITLAB_IMAGE=gitlab/gitlab-ce:latest
GITLAB_ROOT_PASSWORD=change_this_secure_password
GITLAB_RUNNER_TOKEN=

PROM_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=change_this_secure_password

# Backups
BACKUP_DIR=/srv/backups
BACKUP_BUCKET=s3://****-backups
BACKUP_RETENTION_DAYS=7
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Cloudflare Tunnel
CLOUDFLARE_TUNNEL_NAME=gitlab-pi
CLOUDFLARE_TUNNEL_TOKEN=
